<div class = "container">
  <div class = "row">
    <div class ="col-md-6">
      <h3>商品新規登録</h3>

      <%= form_with model: @item, url: new_admin_item_path,local:true do |f|%>
      <div class="col-xs-3">
        <%= f.label:商品画像, class:"col-xs-2" %>
        <%= f.file_field :image, size:"56x5" %>
      </div>
      <br>
      <div class="form-group">
        <%= f.label:商品名, class:"col-xs-2" %>
        <%= f.text_field :name, size:"56x5" %>
      </div>
      <div class = "form-group">
        <div class ="align-top">
          <%= f.label:商品説明, class:"col-xs-2" %>
        </div>
          <%= f.text_area :introduction, size:"55x5" %>
      </div>
        <div class="form-group">
          <%= f.label:ジャンル, class:"col-xs-2" %>
          <%= select_tag(:genre_id, options_for_select([['---選択してください---', ''], ['ケーキ', '1'], ['プリン', '2'], ['焼き菓子', '3'], ['キャンディ', '4']]), {class: 'form-control'}) %>
        </div>
        <div class="form-group">
          <%= f.label:税抜金額, class:"col-xs-2" %>
          <%= f.number_field :price, in: 100.0..5000.0, step: 50.0, size:"56x5" %> 円
        </div>
        <div class="form-group">
          <%= form.radio_button :item, :true %>
          <%= form.radio_button :item, :false %>
        </div>
          <%= f.submit "新規登録", class: "btn btn-primary pull-right" %>
      <% end %>
    </div>
  </div>
</div>