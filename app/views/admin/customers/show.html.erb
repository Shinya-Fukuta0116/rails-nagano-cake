<div class= "container">
  <h2><%= @customer.full_name%>さんの会員詳細</h2>
  <div class="row justify-content-start">
        <div class="col-2">
        </div>
        <div class="col-2">
        </div>
        <br>
        <br>
    <table class="table table-light table-md">
      <thead class= "thead-dark">
        <tr>
          <th width="200px">氏名</th>
          <td><%= @customer.first_name %><%= @customer.last_name %></td>
        </tr>
        <tr width="200px">
          <th>カナ</th>
          <td><%= @customer.first_name_kana %><%= @customer.last_name_kana %></td>
        </tr>
        <tr width="200px">
          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr width="200px">
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr width="200px">
          <th>電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr width="200px">
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
        <tr width="200px">
          <th>会員ステータス</th>
          <td>
          <% if @customer.is_active %>
          有効
          <% else %>
          無効
          <% end %>
          </td>
        </tr>
        <tr width="200px">
          <td><%= link_to "編集する", edit_admin_customer_path, class: "btn btn-success" %></td>
          <td><%= link_to "注文履歴一覧を見る", admin_orders_show_path, class: "btn btn-primary" %></td>
        </tr>
      </thead>
    </table>
  </div>
</div>