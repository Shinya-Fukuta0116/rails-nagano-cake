<h2>注文履歴一覧</h2>
 <br>

<table class="table table-striped tabole-bordered table-hover">
    <thead class= "thead-dark">
        <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
        </tr>
    </thead>
    <% @orders.each do |order| %>
      <tbody>
        <tr>
            <th><%= link_to order.created_at.to_s(:datetime_jp), admin_order_path(order) %></th>
            <th><%= order.name %></th>
            <th><%= order.order_details.sum(:amount) %></th>
            <th><%= order.status %></th>
        </tr>
    <% end %>
      </tbody>
