<div class="mb-3 row">
    <h3>ログイン</h3>
    <%= form_with model: @customer, url: customer_session_path do |f| %>
    <div class="mb-3 row">
      <div class="field">
        <%= f.label :メールアドレス, class: "col-auto" %>
        <%= f.text_field :email, autofocus: true, autocomplete: "email", size: 40 %>
      </div>
    </div>
    <div class="mb-3 row">
      <div class="form-group">
        <%= f.label :パスワード, class: "col-auto" %>
        <%= f.password_field :password, autocomplete: "off", size: 40 %>
      </div>
    </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: "btn btn-success" %>
      </div>
    <% end %>
    <br>
    <br>
      <div class="text-align-left">
        会員がお済みでない方は<%= render "public/shared/links" %>
      </div>
</div>