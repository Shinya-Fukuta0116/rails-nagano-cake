
<div class="container">
  <h2>新規会員登録</h2>
    <br>
    <div class="row">
        <div class="col-xs-8">
          <%= form_with model: @customer, url: customer_registration_path do |f| %>
            <%= render "public/shared/error_messages", resource: resource %>
        <div class= "form-group">
          <%= f.label :氏名, class: "col-sm-2" %>
          <%= f.text_field :first_name, class: "form-control-md" , placeholder:"姓"%>
          <%= f.text_field :last_name, class: "form-control-md" , placeholder:"名"%>
        </div>
        <div class= "form-group">
          <%= f.label :フリガナ, class: "col-sm-2" %>
          <%= f.text_field :first_name_kana, class: "form-control-md" , placeholder:"セイ"%>
          <%= f.text_field :last_name_kana, class: "form-control-md" , placeholder:"メイ"%>
        </div>
        <div class= "form-group">
          <%= f.label :郵便番号, class: "col-sm-2" %>
          <%= f.text_field :postal_code, class: "form-control-md" %>
        </div>
        <div class= "form-group">
          <%= f.label :住所, class: "col-sm-2" %>
          <%= f.text_field :address, class: "col-md-4" %>
        </div>
        <div class= "form-group">
          <%= f.label :電話番号, class: "col-sm-2" %>
          <%= f.text_field :telephone_number, class: "form-control-md" %>
        </div>
        <div class= "form-group">
          <%= f.label :メールアドレス, class: "col-sm-2" %>
          <%= f.text_field :email, class: "form-control-md" %>
        </div>
        <div class="row form-group">
          <%= f.label :"パスワード(6文字以上)" , class: "col-auto" %>
          <%= f.password_field :password, autocomplete: "off", class: "col-sm-2" %>
        </div>
        <div class="row form-group">
          <%= f.label :"パスワード(確認用)" , class: "col-sm-2" %>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "col-sm-2" %>
        </div>
        <div class="text-center">
          <%= f.submit "新規登録" ,class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
      <br>
        <div class="text-left">
          既に登録済みの方は<%= render "public/shared/links" %>
        </div>
</div>

