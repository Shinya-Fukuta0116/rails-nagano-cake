<div class= "container">
  <div class="row">
    <h2>配送先編集</h2>
    <br>
    <br>
    <br>
     <%= form_with model: @address, url: address_path, class: "customer_edit" do |f|%>
     <div class= "form-group">
      <%= f.label :郵便番号, class: "col-sm-2" %>
      <%= f.text_field :postal_code, class: "form-control-md" %>
    </div>
    <div class= "form-group">
      <%= f.label :住所, class: "col-sm-2" %>
      <%= f.text_field :address, class: "col-md-6" %>
    </div>
    <div class= "form-group">
      <%= f.label :宛名, class: "col-sm-2" %>
      <%= f.text_field :name, class: "form-control-md" %>
    </div>
     <% end %>

    <div class="text-align left">
      <%= link_to "変更内容を保存", customers_path, class: "btn btn-primary" %>
    </div>
</div>