<div class = "container">
  <div class = "row">
      <h3 class= "address-head">配送先登録／一覧</h3>
       <br>
          <%= form_with model: @address, url: public_addresses_path do |f| %>
        <div>
          <div class= "form-group">
            <%= f.label :"郵便番号(ハイフンなし）", class: "col-xs-3" %>
            <%= f.text_field :postal_code, class: "col-xs-6" %><br>
          </div>
          <div class= "form-group">
            <%= f.label :"住所", class: "col-xs-3" %>
            <%= f.text_field :address, class: "col-lg-4" %><br>
          </div>
          <div class= "form-group">
            <%= f.label :"宛名", class: "col-xs-3" %>
            <%= f.text_field :name, class: "col-lg-4" %>
          </div>
          <div class= "form-group">
          <%= f.submit "新規登録", class: "btn btn-primary genre_btn" %>
          </div>
        </div>
       <% end %>
          <br>
          <br>
           <table class="table table-striped tabole-bordered table-hover">
            <thead class= "thead-dark">
                <tr>
                    <th>郵便番号</th>
                    <th>住所</th>
                    <th>宛名</th>
                    <th></th>
            </thead>
          <tbody>
                <% @addresses.each do |address| %>
                  <tr>
                    <th><%= address.postal_code %></th>
                    <th><%= address.address %></th>
                    <th><%= address.name %></th>
                    <th>
                      <%= link_to '編集する', edit_public_address_path(address.id), class: "btn-sm btn-success" %>
                      <%= link_to '削除する', public_address_path(address.id), method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-sm btn-danger"  %>
                    </th>
                  </tr>
                <% end %>
            </tbody>
        </table>
  </div>
</div>