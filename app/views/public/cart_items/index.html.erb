<h2>ショッピングカート</h2>
 <br>

<table class="table table-striped tabole-bordered table-hover">
    <thead class= "thead-dark">
      <%= link_to "カートを空にする", public_cart_items_path, method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-sm btn-danger" %>
        <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
        </tr>
    </thead>
      <tbody>
        <% @cart_items.each do |cart| %>
          <tr>
            <th><%#= image_tag cart(@cart.image), size:"250x250" %><%= cart.item.name %></th>
            <th><%= cart.item.add_tax_sales_price.to_s(:dalimited) %></th>
            <%= form_with model: cart, url: public_cart_item_path(cart.id), local: true do |f| %>
            <th><%= f.number_field :amount , placeholder: "個数選択", min: 1, max: 50 %>
              <%= f.submit '更新', class: "btn-sm btn-primary"  %></th>
            <% end %>
            <th><%#= cart.item.total_price.to_i %></th>
            <th><%=link_to '削除する', public_cart_item_path(cart.item.id), method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-sm btn-danger"  %></th>
          </tr>
        <% end %>
    </tbody>
</table>
<div class="row">
	<div class="col-sm-4">
	   <%= link_to root_path do %>
	    <button class="btn btn-primary">買い物を続ける</button>
	   <% end %>
	</div>
  <div class="col-sm-4"></div>
