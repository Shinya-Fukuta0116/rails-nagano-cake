<h2>注文履歴一覧</h2>
 <br>

<table class="table table-striped tabole-bordered table-hover">
    <thead class= "thead-dark">
        <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
        </tr>
    </thead>
    <% @orders.each do |order| %>
      <tbody>
        <tr>
            <th><%= order.created_at.to_s(:datetime_jp) %></th>
            <th><%= order.address %></th>
            <th>
            <% order.order_details.each do |order_detail| %>
            <%= order_detail.item.name %><br>
            <% end %>
            </th>
            <th><%= order.total_payment %></th>
            <th><%= order.status %></th>
            <th><%= link_to "表示する", public_order_path(order), class: "btn btn-success" %></th>
        </tr>
    <% end %>
      </tbody>
